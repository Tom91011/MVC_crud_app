<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- displays site properly based on user's device -->
  <link rel="stylesheet" href="/public/styles/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Barlow&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/c03ec31dc2.js" crossorigin="anonymous"></script>
  <title>Logged in</title>
</head>

<body>
  <div class="wrapper">
    <section class="loading-screen">
      <h1><span class="hide">W</span><span class="hide">e</span><span class="hide">l</span><span class="hide">c</span><span class="hide">o</span><span class="hide">m</span><span class="hide">e</span><span class="hide"> t</span><span class="hide">o</span><span class="hide"> y</span><span class="hide">o</span><span class="hide">u</span><span class="hide">r</span><span class="hide"> b</span><span class="hide">l</span><span class="hide">o</span><span class="hide">g</span></h1>
    </section>
  <%- include("partials/account") -%>
    
 

  
    <div class="compose-container">
      <a href="/compose">
        <button>Create New Article</button>
      </a>
    </div>

    <div class="articles-container">
      
        <% articlesToShow.forEach((article) => { %> 
          <div class="article">
            <a href=<%= `/article/${article.id}` %> >
              <div class="card">
                
                  <div <% if(article.user === userId) {%> 
                    class="card-inner own-article"
                    <% } else { %>
                      class="card-inner other-user-article"
                    <% } %> >
                  <div class="card-image">
                    <img src=<%= article.image%>>
                    <div class="none overlay">
                      <div class="overlay-text">
                        <h2><%- article.teaser %></h2>
                      </div>
                    </div> 
                  </div>
                  <div class="card-info">
                    <div>
                      <p>Title: <%= article.title %></p>
                      <div class="author">
                        <p>Date Posted: <%= article.date %></p> 
                        <p>Author: <%= article.userName%></p>
                      </div>
                    </div>
                    <div class="comments">
                      <p >Comments: <%= article.comments.length%></p>  
                      <!-- <% if(article.comments.length > 0)  {%>
                        <div class="latest-comment">Latest Comment 
                          <p><%= article.comments[article.comments.length-1].date %></p>
                          <p><%= article.comments[article.comments.length-1].commentPosterName %></p>
                          <p><%= article.comments[article.comments.length-1].content %></p>
                        </div> 
                      <% } %>   -->
                    </div>
                  </div>
                      
                    
                  </div>  
                
                  
              </div> 
            </a> 
          </div>
        <% }) %> 
      
    </div> 
  </div>         

    <!-- <a href="/logout"> <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Logout</button> </a> -->

</body>
<script type="module" src="public/client/client.js"></script>
<script type="module" src="public/client/loading-screen.js"></script>

</html>