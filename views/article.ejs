<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- displays site properly based on user's device -->
  <link rel="stylesheet" href="/public/styles/main.css">
  <link rel="stylesheet" href="/public/styles/main.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&family=Tenor+Sans&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/c03ec31dc2.js" crossorigin="anonymous"></script>
  <title>Logged in</title>
</head>

<body>
  <div class="wrapper">
    <section class="loading-screen">

    </section>
    <%- include("partials/account") -%>
    <div class="button-container">
      <a href="/compose">
        <button class="new-article-button">Create New Article</button>
      </a>
      <a href="/dashboard">
        <button>Dashboard</button>
      </a>
    </div>

   

    <div class="article-page-container">
      <div class="article-container">
        <% if(authorId == userId) {%>
          <div class="article-buttons">
            <form action="/delete" method="post">
              <a href=<%= `/edit/${articleId}` %>>
                <button type="submit" name="articleId" value=<%= articleId %> >Delete</button>
              </a>
            </form>
            <a href=<%= `/edit/${articleId}` %>>
              <button>Edit</button>
            </a>
          </div>
          <% } %>
        <div class="article-content">
          <div class="author">
            <h2>Author: <%= authorName %></h2>
            <img class="author-image-icon" src=<%= authorIcon %>>
            <h2><%= moment(date).format('MMM Do YY') %></h2>
          </div>
        
          <h1><%= title %></h1>
          <p><%- content %></p>
          <p> Comments: <%= comments.length %></p>
        </div>
      </div>
     

  
    <div class="comments-container">
      <div class="write-comment">
        <p>Make a comment</p>
        <form action="/comment" method="post">
          <textarea name="content" cols="40" rows="12"></textarea>        
            <button type="submit" name="articleId" value=<%= articleId %>>Comment</button>        
        </form>
      </div> 
      <div class="comments">
        <h1>Comments</h1>
        <% comments.forEach(function(comment) { %>
          <div class="comment">
            <h2> <%= comment.commentPosterName %></h2>
            <h2> <%= comment.date %></h2>
            <h2> <%= comment.content %></h2>
        </div>
        <% }) %>
      </div>
      
    </div>
    </div>

</div>
</body>
<script type="module" src="public/client/client.js"></script>
<script type="module" src="public/client/loading-screen.js"></script>
</html>